<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <TextView
        android:id="@+id/view_message_item_name"
        style="@style/Message.User"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        tools:text="Username" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_message_item_profile"
            android:layout_width="42dp"
            android:layout_height="42dp"
            tools:srcCompat="@tools:sample/avatars[15]" />

        <TextView
            android:id="@+id/view_message_item_message"
            style="@style/Message.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/other_message_background"
            android:gravity="start"
            tools:text="Thiadasda" />

    </LinearLayout>

</LinearLayout>