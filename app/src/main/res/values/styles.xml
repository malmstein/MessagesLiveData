<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Message" />

    <style name="Message.User" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Message.User.Self">
        <item name="android:gravity">end</item>
    </style>

    <style name="Message.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Message.Body.Self">
        <item name="android:gravity">end</item>
        <item name="android:background">@drawable/self_message_background</item>
        <item name="android:padding">8dp</item>
    </style>
c
    <style name="Message.Attachment" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:drawableStart">@drawable/ic_attachment_image</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Message.Attachment.Self">
        <item name="android:drawableStart">@null</item>
        <item name="android:drawableEnd">@drawable/ic_attachment_image</item>
        <item name="android:gravity">center_vertical|end</item>

    </style>

</resources>
